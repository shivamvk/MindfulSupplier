<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".UploadActivity">

<android.support.v7.widget.CardView
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/aadhar"/>

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@android:color/holo_orange_light"/>
                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_document_name_activity_upload"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AADHAR CARD"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@android:color/holo_green_light"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/iv_upload_front"
                    android:visibility="gone"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@color/colorPrimary"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_document_front_side_activity_upload"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AADHAR FRONT SIDE"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/bt_upload_front_side"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:backgroundTint="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"/>


            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="160dp"
                android:background="#000000"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/iv_upload_back"
                    android:src="@color/colorAccent"
                    android:layout_margin="4dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_document_back_side_activity_upload"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AADHAR BACK SIDE"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/bt_upload_back_side"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffffff"
                    android:backgroundTint="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>