<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MINDFUL SUPPLIER"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="45dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Find loads at best price"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_login_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLength="10"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:inputType="number"
                android:hint="Enter your number"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_call_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="A 4 digit OTP is sent to your number"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:id="@+id/tv_a_otp_is_sent"/>


            <EditText
                android:id="@+id/et_login_otp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:inputType="number"
                android:maxLength="4"
                android:hint="Enter Otp"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="16dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_edit_text_red"
                android:text="Sign in"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:id="@+id/bt_sign_in"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"/>

            <Button
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_red"
                android:text="Verify"
                android:textColor="@android:color/white"
                android:id="@+id/bt_login_request_otp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"/>


        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>