<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/truck">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_create_white_24dp"
                    android:id="@+id/iv_account_edit_user_number"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="12dp"
                    android:clickable="true"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_account_circle_white_24dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_account_user_image"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User name"
                    android:id="@+id/tv_account_user_name"
                    android:layout_below="@+id/iv_account_user_image"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="shivam.vk529@gmail.com"
                        android:id="@+id/tv_account_user_email"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not verified. Click here to verify! "
                        android:id="@+id/tv_account_email_not_verified"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_below="@+id/tv_account_user_email"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_error_black_24dp"
                        android:id="@+id/iv_account_email_not_verified"
                        android:layout_toRightOf="@+id/tv_account_email_not_verified"
                        android:layout_below="@+id/tv_account_user_email"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified "
                        android:id="@+id/tv_account_email_verified"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_below="@+id/tv_account_user_email"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_check_circle_black_24dp"
                        android:id="@+id/iv_account_email_verified"
                        android:layout_toRightOf="@+id/tv_account_email_verified"
                        android:layout_below="@+id/tv_account_user_email"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8130583124"
                        android:id="@+id/tv_account_user_number"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not verified. Click here to verify! "
                        android:id="@+id/tv_account_number_not_verified"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_below="@+id/tv_account_user_number"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_error_black_24dp"
                        android:id="@+id/iv_account_is_number_verified"
                        android:layout_toRightOf="@+id/tv_account_number_not_verified"
                        android:layout_below="@+id/tv_account_user_number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified "
                        android:id="@+id/tv_account_number_verified"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_below="@+id/tv_account_user_number"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_check_circle_black_24dp"
                        android:id="@+id/iv_account_number_verified"
                        android:layout_toRightOf="@+id/tv_account_number_verified"
                        android:layout_below="@+id/tv_account_user_number"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/cv_logout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="18sp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>