<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="PROOF OF DElIVERY"
            android:background="@color/blue"
            android:textColor="@android:color/white"/>

        <EditText
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Order No"/>

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/ll_images"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">


                <RelativeLayout
                    android:id="@+id/rl_upload_pod_front"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_with_border"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/iv_upload_pod_front"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/home"/>

                    <ImageView
                        android:id="@+id/iv_dummy_image_1"
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_photo_camera_black_24dp"/>

                    <TextView
                        android:layout_below="@+id/iv_dummy_image_1"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POD Front" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="4dp"
                    android:id="@+id/rl_upload_pod_back"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_with_border"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/iv_upload_pod_back"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/home"/>

                    <ImageView
                        android:id="@+id/iv_dummy_image_2"
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_photo_camera_black_24dp"/>

                    <TextView
                        android:layout_below="@+id/iv_dummy_image_2"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POD Back" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginLeft="4dp"
                    android:id="@+id/rl_upload_pod_other_docs"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_text_with_border"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/iv_upload_pod_other_docs"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:src="@drawable/home"/>

                    <ImageView
                        android:id="@+id/iv_dummy_image_3"
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_photo_camera_black_24dp"/>

                    <TextView
                        android:layout_below="@+id/iv_dummy_image_3"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Documents" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:layout_marginTop="24dp"
                android:layout_below="@id/ll_images"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:id="@+id/bt_upload_pod"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@color/colorPrimaryDark"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>